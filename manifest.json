{
	"$schema": "https://raw.githubusercontent.com/bennett-sh/schemas/main/hm/smf-mod.v2.schema.json",
	"version": "1.3.1",
	"id": "BSh.MoreAccidents",
	"name": "More Accidents",
	"description": "Makes more thing accidental",
	"authors": ["BSh"],
	"frameworkVersion": "2.15.1",
	"options": [
		{
			"name": "ICA Tripwire",
			"type": "checkbox",
			"contentFolders": ["items/tripwire"]
		},
		{
			"name": "Explosive Phone",
			"type": "checkbox",
			"contentFolders": ["items/explosive_phone"]
		},
		{
			"name": "Remote Semtex",
			"type": "checkbox",
			"contentFolders": ["items/remote_semtex"]
		},
		{
			"name": "Deadly Banana",
			"type": "checkbox",
			"contentFolders": ["items/deadly_banana"]
		},
		{
			"name": "All Explosives",
			"type": "checkbox",
			"contentFolders": ["items/all_explosives"]
		},
		{
			"name": "Full Accident",
			"group": "Molotov",
			"type": "select",
			"tooltip": "Both the explosion and the fire are now accidents",
			"contentFolders": ["items/molotov/explosion", "items/molotov/fire"]
		},
		{
			"name": "Fire Accident",
			"tooltip": "The outer fire is now an accident (like before it was nerfed)",
			"type": "select",
			"group": "Molotov",
			"contentFolders": ["items/molotov/fire"]
		},
		{
			"name": "Normal",
			"type": "select",
			"group": "Molotov",
			"enabledByDefault": true
		}
